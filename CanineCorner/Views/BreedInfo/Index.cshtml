@model IEnumerable<CanineCorner.Models.BreedInfo>

@{
    ViewData["Title"] = "Breed Information";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Breed Information</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Breed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.adaptability)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.friendliness)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.health)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.grooming)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.training)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.exercise)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Breed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.adaptability)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.friendliness)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.health)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.grooming)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.training)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.exercise)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
